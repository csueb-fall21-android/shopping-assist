<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CameraFragment">

    <ImageView
        android:id="@+id/camImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@+id/btnDetailFound"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        tools:srcCompat="@tools:sample/avatars" />

        <!--src(source)file from drawable folder which display an imagebutton-->

    <ImageButton
        android:id="@+id/simpleImageButton"
        style="@style/DefaultIconButton"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/camera_button" />

    <Button
        android:id="@+id/btnDetailFound"
        style="@style/ActionButton"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_above="@+id/simpleImageButton"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="10dp"
        android:background="#8BC34A"
        android:onClick="send"
        android:text="Find Item"
        tools:text="Find Item" />

    </RelativeLayout>
