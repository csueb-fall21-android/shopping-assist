<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rvImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rvProdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:hint="Product Name"
        app:layout_constraintLeft_toRightOf="@id/rvImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/rvProdName"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Price"/>

    <TextView
        android:id="@+id/rvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvProdName"
        app:layout_constraintLeft_toRightOf="@id/rvImage"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:hint="Location"/>

    <Button
        android:id="@+id/rvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"
        android:minHeight="48dp"
        android:text="Link"
        app:layout_constraintLeft_toRightOf="@id/rvPrice"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>